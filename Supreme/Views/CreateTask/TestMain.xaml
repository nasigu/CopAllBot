<UserControl x:Class="Supreme.Views.TestMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Supreme.Views"
      xmlns:Vs="clr-namespace:Supreme.Views"
      xmlns:VMs="clr-namespace:Supreme.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <VMs:TestMainViewModel/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <ResourceDictionary>
            <DataTemplate
                DataType="{x:Type VMs:TestTypeViewModel}">
                <Vs:TestType />
            </DataTemplate>
            <DataTemplate
                DataType="{x:Type VMs:TestSpecViewModel}">
                <Vs:TestSpec />
            </DataTemplate>
            <DataTemplate
                DataType="{x:Type VMs:TestFinalizeViewModel}">
                <Vs:TestFinalize />
            </DataTemplate>
            <DataTemplate
                DataType="{x:Type VMs:ComingSoonViewModel}">
                <Vs:ComingSoonView />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="MainView">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.25*"/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding ViewTypeCommand}" Background="Transparent" Content="TYPE" Grid.Column="0" FontWeight="Bold"/>
            <Button Command="{Binding ViewSpecificationsCommand}" Background="Transparent" Content="SPECIFICATIONS" Grid.Column="1" FontWeight="Bold"/>
            <Button Command="{Binding ViewFinalizeCommand}" Background="Transparent" Content="FINALIZE" Grid.Column="2" FontWeight="Bold"/>
        </Grid>

        <ContentControl 

            Grid.Row="1"
                Margin="40,0,40,0"
            Content="{Binding Path=Current}"
            />

        <Button Grid.Row="2" Command="{Binding NextStepCommand}" Style="{StaticResource MainListButtonStyle}" Content="next step" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</UserControl>
